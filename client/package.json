{
    "name": "dodatok-client",
    "version": "0.1.0",
    "description": "A SvelteKit app",
    "author": "Jeremias Pettinen <hi@jeremi.as>",
    "license": "ISC",
    "private": true,
    "type": "module",
    "main": "build/index.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite build && vite preview",
        "test": "playwright test",
        "check": "svelte-kit sync && svelte-check --tsconfig tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig tsconfig.json --watch",
        "test:unit": "vitest",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write .",
        "i18n": "npm-run-all --parallel i18n:compile i18n:generate",
        "i18n:compile": "lingui compile",
        "i18n:generate": "ts-node-esm scripts/generate-i18n.ts > helpers/src/i18n.ts"
    },
    "dependencies": {
        "@fontsource/fira-sans": "^4.5.10",
        "@lingui/core": "^3.15.0",
        "async-await-mutex-lock": "^1.0.10",
        "cookie": "^0.5.0",
        "escape-goat": "^4.0.0",
        "fast-equals": "^4.0.3",
        "helpers": "workspace:*",
        "i18next": "^22.4.9",
        "luxon": "^3.2.1",
        "make-plural": "^7.2.0",
        "material-icons": "^1.13.1",
        "normalize-url": "^8.0.0",
        "set-cookie-parser": "^2.5.1"
    },
    "devDependencies": {
        "@babel/core": "^7.20.12",
        "@lingui/cli": "^3.15.0",
        "@playwright/test": "^1.29.2",
        "@rollup/plugin-typescript": "^11.0.0",
        "@sveltejs/adapter-node": "^1.1.0",
        "@sveltejs/kit": "^1.0.7",
        "@types/cookie": "^0.5.1",
        "@types/luxon": "^3.2.0",
        "@types/node": "^18.11.18",
        "@types/set-cookie-parser": "^2.4.2",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "comment-json": "^4.2.3",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-svelte": "^2.14.1",
        "globby": "^13.1.3",
        "npm-run-all": "^4.1.5",
        "prettier": "2.8.2",
        "prettier-plugin-svelte": "^2.9.0",
        "sass": "^1.57.1",
        "svelte": "^3.55.0",
        "svelte-check": "^3.0.1",
        "ts-morph": "^17.0.1",
        "ts-node": "^10.9.1",
        "tslib": "^2.4.1",
        "typescript": "^4.9.4",
        "vite": "^4.0.4",
        "vite-plugin-run": "^0.2.1",
        "vitest": "^0.26.3"
    }
}
